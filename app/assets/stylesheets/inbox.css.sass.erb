@import "mixins"

.ud-inbox-page-wrap
  .ui-all-messages
    margin-top: 28px
  .ud-inbox-header-wrap
    height: 64px
    background-color: #2E2E36
    .ud-inbox-tab
      border-left: 1px solid #43434D
      height: 64px
      &:before
        display: block
        content: ""
        background-color: #27272E
        width: 1px
        left: -2px
        top: 0
        bottom: 0
        position: absolute
      a
        display: inline-block
        text-align: center
        width: 100%
        height: 64px
        position: relative
        .inbox-tab-head-block
          height: 64px
          display: inline-block
          .inbox-tab-ico
            height: 100%
            float: left
            margin-right: 17px
            svg
              width: 40px
              height: 100%
          .inbox-tab-title
            height: 100%
            float: left
            span
              font:
                size: 1.3125rem
                family: "Fira Sans", sans-serif
                weight: 400
              color: #BEC3C7
              text-transform: uppercase
              line-height: 4rem
      &.active
        svg
          path
            fill: #3598DB
        a
          .inbox-tab-title
            span
              color: #3598DB
      &.ud-inbox-last-tab
        border-right: 1px solid #27272E
        &:after
          display: block
          content: ""
          background-color: #43434D
          width: 1px
          right: -2px
          top: 0
          bottom: 0
          position: absolute

  .ud-inbox-content-wrap
    margin-top: 13px
    .ud-inbox-message-block-wrap
      margin-top: 26px
      padding-left: 0.9375rem
      padding-right: 0.9375rem
      padding-bottom: 24px
      position: relative
      &:before
        display: block
        content: ""
        height: 1px
        left: 0
        bottom: 0px
        right: 0
        position: absolute
        background-color: #fff
      &:after
        display: block
        content: ""
        height: 1px
        left: 0
        bottom: -1px
        right: 0
        position: absolute
        background-color: #BEC3C7
      .avatar-wrap
        position: relative
        width: 60px
        margin: 0 auto

        &.ud-inbox-draft
          padding-left: 50px
          &:after
            display: block
            content: ''
            width: 30px
            height: 16px
            background-image: url('<%=asset_path("UD-icon-sent to.svg")%>')
            background-size: 100%
            background-repeat: no-repeat
            position: absolute
            top: 30%
            left: 0
        .avatar
          position: relative
          &:before
            display: block
            content: ""
            position: absolute
            bottom: 0
            height: 4px
            background-color: #96D03F
            width: 100%
          .image
            max-width: 100%
            width: 100%
            height: 0
            padding-bottom: 110%
            overflow: hidden
            -webkit-background-size: cover !important
            -moz-background-size: cover !important
            -o-background-size: cover !important
            background-size: cover !important
            margin: 0 auto
      .ui-message-main-wrap
        width: 100%
        position: relative
        &:before
          display: inline-block
          content: attr(data-count-messages)
          position: absolute
          top: 0
          left: -25px
          color: #BEC3C7
          font:
            size: rem-calc(18)
            weight: 400
          line-height: 1.35rem
        p
          margin-bottom: 0
        .ui-message-detail-info
          height: 15px
          padding-right: 40px
          a
            width: 40px
            height: 100%
            float: right
            svg
              height: 100%
          p.ud-date
            display: inline-block
            margin-bottom: 0
            float: right
            color: #BEC3C7

      .ud-message-option-wrap
        position: absolute
        width: 20px
        height: 18px
        top: 0
        right: 0.9375rem
        svg
          height: 100%
          width: 4px
          float: right
          rect
            fill: #BEC3C7
        .ud-message-option
          position: relative
          .ud-message-option-popup
            min-width: 165px
            position: absolute
            top: 20px
            right: 0
            background-color: #EDF0F1
            z-index: 10
            padding: 13px
            -webkit-box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.35)
            -moz-box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.35)
            box-shadow: 0px 1px 4px 0px rgba(0, 0, 0, 0.35)
            ul
              list-style: none
              margin-left: 0
              margin-bottom: 0
              li
                padding: 6px 0
                a
                  color: #58595B
                  font:
                    size: rem-calc(12)
                    weight: 300
                  line-height: rem-calc(20)
                  svg
                    width: 20px
                    height: 20px
                    float: left
                    margin-right: 5px
                    path, g, rect, polygon
                      fill: #48647C
            p
              color: #BEC3C7
              font:
                size: rem-calc(9)
                weight: 300
              line-height: rem-calc(30)
              margin-bottom: 0

      b
        color: #2E3E51
        font:
          size: rem-calc(18)
          weight: 400
        line-height: rem-calc(21.6)
      p.ud-text-message
        color: #BEC3C7
        font:
          size: rem-calc(14)
          weight: 300
        line-height: rem-calc(19)
        cursor: pointer
        &.udi-label
          color: #FF6F70
          font:
            size: rem-calc(14)
            weight: 300
          line-height: rem-calc(16.8)
.all-conversations
  margin-bottom: 165px
.ud-inbox-sent-message
  padding-top: 30px
  .avatar-wrap
    position: relative
    width: 60px
    margin: 0 auto
    .avatar
      position: relative
      .image
        max-width: 100%
        width: 100%
        height: 0
        padding-bottom: 100%
        overflow: hidden
        -webkit-background-size: cover !important
        -moz-background-size: cover !important
        -o-background-size: cover !important
        background-size: cover !important
        margin: 0 auto
        border-radius: 50%
    .title-for-avatar
      span
  .ud-input-message-wrap
    width: 100%
    float: left
    //padding-left: 40px
    position: relative
    padding-bottom: 30px
    .input
      .input-label
        position: relative
        height: 16.8px
        margin-bottom: 9px
        label
          position: absolute
          left: 0
          top: 0
          font-size: 0.875rem
          font-weight: 300
          font-family: "Fira Sans", sans-serif
          line-height: 1.05rem
          color: #BEC3C7
          span
            padding-left: .5rem
      textarea
        margin-bottom: 10px
    a.modal-link
      font-size: 1.125rem
      font-weight: 500
      color: #D03F4A
      text-transform: uppercase
      height: 35px
      line-height: 2.1875rem
      padding: 0 35px
      display: inline-block
      position: static
      &.m-send
        background: #D03F4A
        color: #fff
    a.edit-icon-svg
      svg
        height: 35px
        width: 24px
        margin-right: 20px
        path, circle, polygon
          fill: #48647C

