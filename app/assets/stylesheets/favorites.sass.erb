@import "mixins"

.favorites-nav-wrap
  background-color: #2E2E36
  width: 100%
  margin-bottom: 30px

  nav
    @media (min-width: 0) and (max-width: 1100px)
      text-align: center
    li
      list-style: none
      width: 13.5%
      display: inline-block
      border-left: 1px solid #27272E
      @media (min-width: 640px) and (max-width: 1100px)
        width: 10%
      @media (min-width: 0) and (max-width: 640px)
        width: 12.5%
      &.active
        .round-count
          display: none
        path, polygon
          fill: #3598DB !important
        b
          color: #3598DB !important
      &:last-of-type
        border-right: 1px solid #43434D
        a
          border-right: 1px solid #27272E
      a
        display: inline-block
        border-left: 1px solid #43434D
        height: 85px
        padding-top: 9px
        .round-count
          right: 6px
        .icon
          position: relative
          height: 30px
          margin-bottom: 6px
          svg
            +my_vertical_align
            height: 34px
            width: 100%
            path, polygon
              fill: #BEC3C7
        .title
          position: relative
          height: 34px
          width: 95%
          padding-left: 2.5%
          @media (min-width: 0) and (max-width: 1100px)
            display: none
          b
            font:
              size: rem-calc(14)
              weight: 300
            line-height: rem-calc(18)
            color: #BEC3C7
            text-transform: uppercase
            display: inline-block
            text-align: center
            width: 100%
            position: absolute

.favorites-man-wrap
  .favorites-nav
    nav
      li
        width: 16%

.favorites-container
  .preview-profile
    .information
      .actions
        .action-button
          width: 22px !important
          margin-right: 14px !important
          &.has-in-list
            path, polygon
              fill: #96D03F
.f-margin-top
  margin-top: 30px