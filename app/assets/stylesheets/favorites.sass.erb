@import "mixins"

.favorites-nav-wrap
  background-color: #2E2E36
  width: 100%
  margin-bottom: 30px

  nav
    @media (min-width: 0) and (max-width: 1100px)
      text-align: center
    li
      list-style: none
      width: 13.5%
      display: inline-block
      border-left: 1px solid #27272E
      @media (min-width: 640px) and (max-width: 1100px)
        width: 10%
      @media (min-width: 0) and (max-width: 640px)
        width: 12.5%
      &.active
        .round-count
          display: none
        path, polygon
          fill: #3598DB !important
        b
          color: #3598DB !important
      &:last-of-type
        border-right: 1px solid #43434D
        a
          border-right: 1px solid #27272E
      a
        display: inline-block
        border-left: 1px solid #43434D
        height: 85px
        padding-top: 9px
        .round-count
          right: 6px
        .icon
          position: relative
          height: 30px
          margin-bottom: 6px
          svg
            +my_vertical_align
            height: 34px
            width: 100%
            path, polygon
              fill: #BEC3C7
        .title
          position: relative
          height: 34px
          width: 95%
          padding-left: 2.5%
          @media (min-width: 0) and (max-width: 1100px)
            display: none
          b
            font:
              size: rem-calc(14)
              weight: 300
            line-height: rem-calc(18)
            color: #BEC3C7
            text-transform: uppercase
            display: inline-block
            text-align: center
            width: 100%
            position: absolute

.favorites-man-wrap
  .favorites-nav
    nav
      li
        width: 16%

.favorites-container
  .preview-profile
    .information
      .actions
        .action-button
          width: 22px !important
          margin-right: 14px !important
          &.has-in-list
            path, polygon
              fill: #96D03F
.f-margin-top
  margin-top: 30px


.advanced-search-wrap
  .find-form-wrap
    background-color: #2E2E36
    .label-wrap
      position: relative
      @media (min-width: 0) and (max-width: 1025px)
        height: 65px
        label
          /*display: none*/
          +my_horizontal_align
            left: 40%
            position: absolute
    label
      font:
        size: rem-calc(21)
        weight: 300
      line-height: rem-calc(38)
      color: #BEC3C7
      text-transform: uppercase
      position: relative
      margin: 14px 0 14px 50px
      white-space: nowrap

      svg
        width: 38px
        height: 38px
        position: absolute
        top: 0
        left: -50px
        path
          fill: #BEC3C7
    .input
      padding: 14px 0
      width: 100%
      position: relative
      &:before
        display: inline-block
        content: attr(data-word)
        position: absolute
        top: 35%
        right: -20px
        font:
          size: rem-calc(14)
        line-height: rem-calc(16.8)
        color: #BEC3C7
        text-transform: lowercase

      input
        height: 35px
        width: 100%
        padding-left: 13px
        &:focus
          border: none !important
    .form-action
      button
        height: 35px
        margin: 0 !important
        padding: 0 25px 0 25px !important
        line-height: 2.1875rem
        background-color: #D03F4A
        position: relative
        outline: none !important
        width: 100%
        @media (min-width: 0) and (max-width: 1025em)
          width: 137px
          +my_horizontal_align
  .advanced-form-wrap
    margin-top: 50px
    @media (min-width: 0) and (max-width: 40em)
      .wrap
        h4
          display: block
          cursor: pointer
          width: 100%
    .your-best-match-wrap
      @media (min-width: 64em) and (max-width: 1170px)
        width: 50%
      @media (min-width: 40em) and (max-width: 64em)
        width: 100%
    .input
      padding-top: 15px
      > label
        font:
          size: rem-calc(14)
        line-height: rem-calc(16.8)
        color: #2E3E51
        margin-bottom: 6px
      select
        width: 100%
        margin: 0
        border: none
      .SumoSelect
        width: 100%
        .optWrapper
          top: 35px
        ul.options
          max-height: none
          height: auto
          overflow: visible
          li
            height: 35px
            border-radius: 0!important
            border-bottom: 1px solid #BEC3C7
            padding: 0 0 0 35px
            &:hover
              background-color: #EDF0F1
            span
              i
                background: #fff
                border: 1px solid #BEC3C7
            label
              font:
                size: rem-calc(14)
              line-height: rem-calc(35)
              color: #BEC3C7
            &.selected
              span
                i
                  background-image: url('<%=asset_path("UAD-check-(white).png")%>')
                  background-color: #3598DB
                  border: none
              label
                color: #3598DB
      .SlectBox
        width: 100%
        padding: 0
        height: 35px
        border: none
        margin: 0
        > span
          height: 100%
          line-height: rem-calc(35)
          color: #BEC3C7
          font:
            size: rem-calc(14)
            weight: 300
          padding-left: 12px
        > label
          background-color: transparent
          > i
            background-image: url('<%=asset_path("UAD-triangle-grey.png")%>')
            width: 100%
            height: 100%
      &.half
        select, .SumoSelect
          width: 48%
          &:first-of-type
            margin-right: 1%
    .advanced-form
      padding-bottom: 35px
      margin-bottom: 45px
      @media (min-width: 0) and (max-width: 40em)
        height: 0
        overflow: hidden
        padding-bottom: 0
        margin-bottom: 2px
        &.extend-form
          height: auto
          padding-bottom: 35px
          margin-bottom: 45px
      a
        font:
          size: rem-calc(12)
        color: #2E3E51
        padding-left: 10px
        span
          color: #D03F4A

    .form-action
      margin-top: 23px
      button
        height: 35px
        margin: 0 !important
        padding: 0 25px 0 25px !important
        line-height: 2.1875rem
        background-color: #D03F4A
        position: relative
        outline: none !important
        width: 100%
        text-transform: uppercase

    .information
      .actions
        .action-button
          width: 22px
          margin-right: 8px


