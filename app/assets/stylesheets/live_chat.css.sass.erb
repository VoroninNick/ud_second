.live-chat-tumblers
  float: right
  position: relative
  .tumbler
    width: 20px
    height: 20px
    float: left
    margin: 5px
    cursor: pointer
    position: absolute
    top: -30px
    svg
      width: 100%
      height: 100%
      rect
        fill: #BEC3C7
    &.vertical-layout-button
      right: 30px
    &.horizontal-layout-button
      right: 60px
    &.active
      rect
        fill: #48647C

.live-chat-custom-column
.lch-people-online
.black-layer-absolute
  width: 100%
  position: relative
  &:before
    position: absolute
    left: 0
    top: 0
    right: 0
    display: block
    content: ''
    height: 245px
    background: transparent
.live-cam-full-mode
  .black-layer-absolute
    &:before
      height: 500px
  .video-chat-wrap
    height: 500px !important
  .column-live-chat-me
    display: none
  .column-live-chat-enemy
    width: 100% !important
    .video-chat-window
      height: 460px !important
      .vcw-inner
        .avatar
          &.avatar-me
            left: 0
          &.avatar-enemy
            left: 53px
  a.ud-stop-cam
    display: none !important
  a.ud-fullscreen-mode
    display: none !important
  a.ud-minimize-stop-cam
    display: block !important
  a.ud-minimize-mode
    width: 46px
    height: 38px
    display: inline-block !important
    svg
      width: 100%
      height: 100%
      path, polygon
        fill: #fff

.horizontal-layout
  position: relative
  .black-layer-absolute
    &:before
      background: #2E2E36
  .video-chat-column
    width: 100%
    .video-chat-wrap
      height: 245px
      .vch-column
        width: 50%
      .video-chat-window
        height: 200px
  .text-chat-column
    width: 100%
    margin-top: 24px

.vertical-layout
  .video-chat-column
    width: 30%
    float: right
    padding-left: 0
    .video-chat-wrap
      min-height: 670px
    .video-chat-wrap
      position: relative
      &:before
        display: block
        content: ''
        position: absolute
        top: 14px
        left: -8px
        width: 0
        height: 0
        border-style: solid
        border-width: 5.5px 8px 5.5px 0
        border-color: transparent #2e2e36 transparent transparent
        z-index: 11
      .vch-column
        width: 100%
      .video-chat-window
        height: 170px
  .text-chat-column
    width: 70%
    padding-right: 0
.text-chat-column
  resize: vertical
  overflow: auto
  min-height: 670px
  position: relative
  &:after
    position: absolute
    bottom: 0
    height: 20px
    background-color: #EDF0F1
    background-image: url('<%=asset_path("sizable.png")%>')
    background-repeat: no-repeat
    background-size: 12px
    background-position: right bottom
    display: block
    content: ''
    left: 0
    right: 0
  .text-chat-wrap
    background-color: #EDF0F1
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 20px
    .text-chat-inner

  .text-chat-view-container
    position: absolute
    top: 58px
    left: 0
    right: 0
    bottom: 230px
    overflow-y: auto
    //background: yellow
  .text-chat-input-container
    min-height: 210px
    position: absolute
    left: 0
    right: 0
    bottom: 0
    border-top: 1px solid #BEC3C7
    &:before
      display: block
      content: ''
      height: 1px
      left: 0
      top: -1px
      right: 0
      position: absolute
      background-color: #fff
    .text-chat-input-container-inner
      position: relative
      width: 100%
      height: 100%
      padding: 0 0.9375rem
      padding-top: 25px
    .avatar
      width: 64px
      margin: 0 auto
      .image
        max-width: 100%
        width: 100%
        height: 0
        padding-bottom: 100%
        overflow: hidden
        -webkit-background-size: cover !important
        -moz-background-size: cover !important
        -o-background-size: cover !important
        background-size: cover !important
        margin: 0 auto
        border-radius: 50%
    .about-people
      b
        font:
          size: rem-calc(14)
          family: "Fira Sans", sans-serif
          weight: 400
        color: #2E3E51
        text-transform: lowercase
    a.ud-button
      font-size: 1.125rem
      font-weight: 500
      color: #fff
      background-color: #D03F4A
      text-transform: uppercase
      height: 35px
      line-height: 2.1875rem
      padding: 0 35px
      display: inline-block
      position: static
    a.edit-icon-svg
      svg
        height: 35px
        width: 24px
        margin-right: 20px
        path, circle, polygon
          fill: #48647C
    a.translate
      color: #3598DB
      font:
        size: rem-calc(14)
        family: "Fira Sans", sans-serif
        weight: 300
    label
      color: #BEC3C7
      font:
        size: rem-calc(14)
        family: "Fira Sans", sans-serif
        weight: 300
    a.ud-close-session
      line-height: rem-calc(35)
      font:
        size: rem-calc(10)
        weight: 300
        family: "Fira Sans", sans-serif
      color: #D03F4A
      padding-right: 25px
      span
        color: #2E3E51


.video-chat-column
  .video-chat-wrap
    background-color: #2E2E36
    .vch-column
    .video-chat-window
      width: 100%
      margin-top: 22px
      a.ud-button
        font:
          size: rem-calc(18)
          weight: 500
          family: "Fira Sans", sans-serif
        line-height: rem-calc(35)
        text-transform: uppercase
        color: #EDF0F1
        height: 35px
        display: block
        width: 100%
        background-color: #D03F4A
        text-align: center
        letter-spacing: 0.03rem
      .vcw-welcome
        .avatar
          position: relative
          .image
            max-width: 100%
            width: 100%
            height: 0
            padding-bottom: 100%
            overflow: hidden
            -webkit-background-size: cover !important
            -moz-background-size: cover !important
            -o-background-size: cover !important
            background-size: cover !important
            margin: 0 auto
          &:before
            display: block
            content: ""
            position: absolute
            bottom: 0
            height: 4px
            background-color: #96D03F
            width: 100%
        .about-people
          b
            font:
              size: rem-calc(31)
              family: "Fira Sans", sans-serif
              weight: 400
            color: #EDF0F1
            svg
              width: 21px
              height: 21px
        a.ud-button
          margin-bottom: 18px
        p
          font:
            size: rem-calc(10)
            family: "Fira Sans", sans-serif
            weight: 300
          color: #BEC3C7
          line-height: rem-calc(13)
      .vcw-inner
        width: 80%
        margin: 0 auto
        height: 100%
        overflow: hidden
        position: relative
        &:hover
          .vcw-navigation-wrap
            bottom: 0
        .vcw-navigation-wrap
          height: 55px
          position: absolute
          left: 0
          right: 0
          bottom: -47px
          //bottom: 0
          transition: bottom .5s
          .triangle-wrap
            position: relative
            overflow: hidden
            height: 8px
            width: 100%
            opacity: .8
            .triangle
              border: 8px solid #2E2E36
              border-bottom: none
              border-color: transparent #2E2E36 transparent
              position: relative
              left: 30px
              -webkit-transform: translateX(-50%)
              -moz-transform: translateX(-50%)
              -ms-transform: translateX(-50%)
              -o-transform: translateX(-50%)
              transform: translateX(-50%)
              position: absolute
              top: 0
              z-index: 11
              &:before, &:after
                right: 8px
                width: 1000px
              &:before
                content: ""
                position: absolute
                z-index: 11
                height: 8px
                top: -8px
                background: #2E2E36
              &:after
                content: ""
                position: absolute
                z-index: 11
                height: 8px
                top: -8px
                left: 8px
                background: #2E2E36
          .vcw-navigation
            height: 47px
            width: 100%
            background-color: rgba(46, 46, 54, .8)
            a.ud-minimize-stop-cam
              display: none
            a.ud-minimize-mode
              display: none
            p
              font:
                size: rem-calc(10)
                family: "Fira Sans", sans-serif
                weight: 300
              color: #BEC3C7
              line-height: rem-calc(13)
              margin-top: 2px
            a.ud-stop-cam
              margin-top: 3px
            a.ud-fullscreen-mode
              width: 46px
              height: 38px
              display: inline-block
              svg
                width: 100%
                height: 100%
                path, polygon
                  fill: #fff
        .image
          max-width: 100%
          width: 100%
          height: 100%
          overflow: hidden
          -webkit-background-size: cover !important
          -moz-background-size: cover !important
          -o-background-size: cover !important
          background-size: cover !important
          margin: 0 auto
        .avatar
          width: 52px
          height: 52px
          position: absolute
          left: 0
          top: 0
          .image
            max-width: 100%
            width: 100%
            height: 100%
            overflow: hidden
            -webkit-background-size: cover !important
            -moz-background-size: cover !important
            -o-background-size: cover !important
            background-size: cover !important
            margin: 0 auto
          &:before
            display: block
            content: ""
            position: absolute
            bottom: 0
            height: 4px
            background-color: #96D03F
            width: 100%

