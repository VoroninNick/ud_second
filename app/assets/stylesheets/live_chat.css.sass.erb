.text-chat-column
  resize: vertical
  overflow: auto
  min-height: 719px
  position: relative
  &:after
    position: absolute
    bottom: 0
    height: 20px
    background-color: #EDF0F1
    background-image: url('<%=asset_path("sizable.png")%>')
    background-repeat: no-repeat
    background-size: 12px
    background-position: right bottom
    display: block
    content: ''
    left: 0
    right: 0
  .text-chat-wrap
