.text-chat-wrap.text-chat-column
  .title-head.grey.notification-wrap
    .columns
      .wrap
        h4 Live chat: You and Olena
        .items-menu.notification-link
          =image_tag "UD-icon-sub menu.svg"
          .notification-container
            .menu
              .group
                .title
                  strong Display options:
                .options
                  .option
                    .label
                      .icon
                        = embedded_svg "UD-icon-sort.svg"
                      span
                        |Sort by
                    .input
                      select.sort-by
                        option value="age_increase" Age increase
                        option value="age_decrease" Age decrease
                        option value="alfabet" Alfabet
                        option value="recent_activity" Recent activity
                        option value="favotites_first" Favotites first
                    .clearfix

  .text-chat-view-container
    .columns
      .row.ud-one-message.my-message
        .column.large-3.medium-3.small-3
          .row
            .columns
              .avatar
                .image style="background: url('#{asset_path("user_avatar_default.png")}')no-repeat center center;"
          .row
            .columns.text-center
              .about-people
                b me
        .column.large-9.medium-9.small-9.end
          .chat-bubbles-wrap
            .text-wrap
              .date-time-wrap
                p 02:16 PM
              p Hello!

