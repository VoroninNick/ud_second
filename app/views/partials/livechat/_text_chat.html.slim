  .text-chat-input-container.ud-attach-file-into-message
    .text-chat-input-container-inner
      .row
        .columns
          form
            .row
              .columns
                /a.translate Translate into english
                p.ud-biling-info
                  |Each minute is billed at 1 Credit. Billing stops automatically if chat was in-active for 3 minutes.
            .row
              .columns
                textarea rows="3" placeholder="Quick replay..."
            .row
              .ud-e-attachment-wrap
            .row
              .columns
                .right-group-links
                  a.ud-button.special-text-shadow.right href="#" Send
                  .ud-browse-images-wrap.notification-wrap.right
                    a.edit-icon-svg.browse-file.notification-link
                      = embedded_svg "UD-icon-add files.svg"
                    .notification-container
                      .menu
                        .group
                          .options
                            .option
                              .label
                                .icon
                                  = embedded_svg "ud-make-image.svg"
                              .input
                                a data-reveal-id="AddAPictures" Add a picture
                              .clearfix
                  a.edit-icon-svg.smiles.right
                    = embedded_svg "UD-icon-smile.svg"
                  a.ud-close-session.right
                    |Close this session
                    span
                      |&nbsp;or
                  .clearfix

